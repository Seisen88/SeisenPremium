# Backend Server Configuration

# Port for the backend server
PORT=3000

# Path to Prometheus installation directory
# Example: C:\Prometheus or /home/user/Prometheus
PROMETHEUS_PATH=C:\Prometheus

# Path to Lua executable (lua or luajit)
# Leave empty to use system PATH
LUA_EXECUTABLE=lua

# Temporary directory for processing files
TEMP_DIR=./temp

# Enable debug logging
DEBUG=true

# ===== PayPal Configuration =====
# Get these from https://developer.paypal.com/dashboard/
# Set to true for testing with PayPal Sandbox
PAYPAL_SANDBOX=true

# PayPal REST API Credentials
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ===== Junkie Key System Configuration =====
# Create 3 separate webhooks in Junkie dashboard, one for each tier
# Each webhook should have different validity settings:
# - Weekly: 168 hours
# - Monthly: 720 hours  
# - Lifetime: 0 hours (unlimited)

# Weekly tier webhook (168 hours validity)
JUNKIE_WEBHOOK_URL_WEEKLY=https://api.junkie-development.de/api/v1/webhooks/execute/YOUR_WEEKLY_WEBHOOK_ID

# Monthly tier webhook (720 hours validity)
JUNKIE_WEBHOOK_URL_MONTHLY=https://api.junkie-development.de/api/v1/webhooks/execute/YOUR_MONTHLY_WEBHOOK_ID

# Lifetime tier webhook (unlimited validity)
JUNKIE_WEBHOOK_URL_LIFETIME=https://api.junkie-development.de/api/v1/webhooks/execute/YOUR_LIFETIME_WEBHOOK_ID

# HMAC secret for webhook security (same for all webhooks)
JUNKIE_HMAC_SECRET=ZlU4RGkc7bAeQPidYIET60f8LKqrjyWg

# Your provider name in Junkie system
JUNKIE_PROVIDER=seisenhub

# Your service name in Junkie system
JUNKIE_SERVICE=Premium Key

# ===== Database Configuration =====
# Path to SQLite database file
DB_PATH=./payments.db

